{
  "title": "Iowa Electricity Generation Mix Over Time",
  "description": "Net generation by source showing growth trends and composition changes",
  "width": 900,
  "height": 300,
  "data": {
    "url": "iowa-electricity.csv"
  },
  "mark": {
    "type": "point",
    "filled": true,
    "opacity": 0.8
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": -45,
        "labelOverlap": false
      }
    },
    "y": {
      "field": "source",
      "type": "ordinal",
      "title": "Energy Source"
    },
    "size": {
      "field": "net_generation",
      "type": "quantitative",
      "title": "Net Generation (GWh)",
      "scale": {
        "type": "linear",
        "zero": true,
        "range": [
          100,
          1000
        ]
      }
    },
    "color": {
      "field": "source",
      "type": "nominal",
      "scale": {
        "scheme": "tableau10"
      },
      "legend": {
        "title": "Energy Source"
      }
    },
    "tooltip": [
      {
        "field": "year",
        "type": "ordinal",
        "title": "Year"
      },
      {
        "field": "source",
        "type": "nominal",
        "title": "Source"
      },
      {
        "field": "net_generation",
        "type": "quantitative",
        "title": "Net Generation (GWh)",
        "format": ",.0f"
      }
    ]
  }
}