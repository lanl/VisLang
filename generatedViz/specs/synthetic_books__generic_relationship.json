{
  "$schema": "https://vega.github.io/schema/vegalite/v5.json",
  "description": "A relationship chart showing two numeric fields for books",
  "mark": {
    "type": "point"
  },
  "encoding": {
    "x": {
      "field": "pages",
      "type": "quantitative"
    },
    "y": {
      "field": "rating",
      "type": "quantitative"
    },
    "tooltip": [
      {
        "field": "title",
        "type": "nominal"
      },
      {
        "field": "author",
        "type": "temporal"
      },
      {
        "field": "genre",
        "type": "nominal"
      }
    ]
  },
  "data": {
    "url": "data/synthetic_books.json"
  }
}