{
  "$schema": "https://vega.github.io/schema/vegalite/v5.json",
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "right"
      },
      "encoding": {
        "x": {
          "field": "pages",
          "type": "quantitative"
        },
        "y": {
          "field": "title",
          "type": "nominal"
        },
        "text": {
          "field": "pages",
          "type": "quantitative",
          "format": ".0f"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ],
  "config": {
    "view": {
      "strokeWidth": 0
    }
  },
  "data": {
    "url": "data/synthetic_books.json"
  }
}