{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "layer": [
    {
      "mark": {
        "type": "circle",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "timestamp",
          "type": "temporal"
        },
        "y": {
          "aggregate": "mean",
          "field": "value"
        },
        "color": {
          "field": "status"
        },
        "tooltip": [
          {
            "field": "sensor_id"
          },
          {
            "field": "location"
          },
          {
            "field": "unit"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "timestamp",
          "type": "temporal"
        },
        "y": {
          "aggregate": "mean",
          "field": "battery_percent"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ],
  "data": {
    "url": "data/synthetic_sensors.json"
  }
}